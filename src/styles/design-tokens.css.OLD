/* Base tokens */
:root {
  /* Colors in RGB triplets for Tailwind variable colors */
  --color-bg: 255 255 255;
  --color-fg: 17 24 39;
  --color-muted: 107 114 128;

  --color-primary: 59 130 246;   /* blue-500 */
  --color-primary-foreground: 255 255 255;

  --color-accent: 20 184 166;    /* teal-500 */
  --color-accent-foreground: 255 255 255;

  /* Radius */
  --radius-sm: 6px;
  --radius-md: 10px;
  --radius-lg: 14px;

  /* Typography */
  --font-sans: Inter, ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, 'Apple Color Emoji', 'Segoe UI Emoji';
}

[data-theme="dark"] {
  --color-bg: 17 24 39;        /* gray-900 */
  --color-fg: 243 244 246;     /* gray-100 */
  --color-muted: 156 163 175;  /* gray-400 */

  --color-primary: 96 165 250; /* blue-400 */
  --color-primary-foreground: 17 24 39;

  --color-accent: 45 212 191;  /* teal-400 */
  --color-accent-foreground: 17 24 39;
}

/* Focus styles (use :focus-visible) */
:root {
  --focus-ring: 59 130 246;
}
:focus-visible {
  outline: 3px solid rgb(var(--focus-ring));
  outline-offset: 2px;
}

/* Reduced motion */
@media (prefers-reduced-motion: reduce) {
  * {
    animation: none !important;
    transition: none !important;
    scroll-behavior: auto !important;
  }
}
